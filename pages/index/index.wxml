<!--index.wxml-->
<view class="container">

<!--登录弹窗-->
  <view class="userinfo">
    <block wx:if="{{hasPhone}}">
        <block wx:if="{{!hasUserInfo}}">
          <button wx:if="{{canIUseGetUserProfile}}" 
          open-type="getUserInfo"
          bindtap="getUserProfile" style="width:100%"> 获取头像昵称 </button>
        </block>
        <block wx:else>
          <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
          <text class="userinfo-nickname">{{userInfo.nickName}}</text>
        </block>
    </block>
    <block wx:else>
        <button style="width:100%" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">
          微信用户一键登陆
        </button>
    </block>

  </view>

  <view class="usermotto">
    <text class="user-motto" bindtap="toHome">{{motto}}</text>
  </view>
</view>
