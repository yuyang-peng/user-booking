/* pages/tuijian/tuijian.wxss */
page{
  box-sizing: border-box
}
.page-body{
  height: 500rpx;
}
.topTabSwiper{
  display: flex;
}
.tab{
  flex: 1;
  text-align: center;
  padding: 10px 0;
}
.tabborer{
  border-bottom:1px solid red;
  color: #0f0;
}
.tab>image{
  width: 100rpx;
  height: 100rpx;
}
.tab>text{
  display: block;
  font-size: 30rpx;
}

/* 列表样式 */
.dataList{
  overflow: auto;
}
.swiper_con{
  padding:20rpx;
  border-bottom: 1px solid #e4e4e4;
}
.dataImg{
  border-radius: 4%;
  width: 200rpx;
  height: 300rpx;
}
.dataInfo{
  /* border: 1px solid red; */
  width: calc(100% - 330rpx);
  display: inline-block;
  vertical-align: top;
  padding: 0 10rpx;
}
.dataInfo>text{
  display: block
}
.dataInfo>.title{
  font-size: 65rpx;
  line-height: 1.5;
}
.dataInfo>.number{
  line-height: 1.5;
  font-size: 40rpx;
}
.dataInfo>.desc{
  width: 90%;
  display: inline-block;
  white-space:normal;
  word-break:normal;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
    font-size: 26rpx;
    color: #666;
}
.appoint{
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  margin-top: 12%;
  line-height: 100rpx;
  text-align: center;

  border: 1px solid #d24a58;
  border-radius: 50%;
  vertical-align: top;
  background: #d24a58;
  color: #fff;
}